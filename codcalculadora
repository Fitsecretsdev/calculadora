    <script>
        function calcular() {
            const peso = parseFloat(document.getElementById('peso').value);
            const altura = parseFloat(document.getElementById('altura').value);
            const idade = parseFloat(document.getElementById('idade').value);
            const sexo = document.getElementById('sexo').value;
            const atividade = parseFloat(document.getElementById('atividade').value);

            // Valida√ß√£o
            if (!peso || !altura || !idade || !sexo || !atividade) {
                alert('Por favor, preencha todos os campos!');
                return;
            }

            // Calcular IMC
            const alturaM = altura / 100;
            const imc = peso / (alturaM * alturaM);
            
            // Classifica√ß√£o do IMC
            let categoria, descricao;
            if (imc < 18.5) {
                categoria = 'Abaixo do peso';
                descricao = 'Considere ganhar peso de forma saud√°vel com orienta√ß√£o profissional.';
            } else if (imc < 25) {
                categoria = 'Peso normal';
                descricao = 'Parab√©ns! Mantenha seus h√°bitos saud√°veis.';
            } else if (imc < 30) {
                categoria = 'Sobrepeso';
                descricao = 'Considere ajustar sua dieta e aumentar a atividade f√≠sica.';
            } else {
                categoria = 'Obesidade';
                descricao = 'Recomendamos buscar orienta√ß√£o m√©dica e nutricional.';
            }

            // Calcular TMB (F√≥rmula de Mifflin-St Jeor)
            let tmb;
            if (sexo === 'masculino') {
                tmb = (10 * peso) + (6.25 * altura) - (5 * idade) + 5;
            } else {
                tmb = (10 * peso) + (6.25 * altura) - (5 * idade) - 161;
            }

            // Calcular TDEE
            const tdee = tmb * atividade;

            // Exibir resultados
            document.getElementById('imcValue').textContent = imc.toFixed(1);
            document.getElementById('imcCategory').textContent = categoria;
            document.getElementById('imcDescription').textContent = descricao;
            
            document.getElementById('tmbValue').textContent = Math.round(tmb);
            document.getElementById('tdeeValue').textContent = Math.round(tdee);

            // Mostrar cards de resultado
            document.getElementById('imcResult').classList.remove('hidden');
            document.getElementById('tmbResult').classList.remove('hidden');
            document.getElementById('tdeeResult').classList.remove('hidden');

            // Gerar dicas personalizadas
            gerarDicas(imc, categoria, tdee);
        }

        function gerarDicas(imc, categoria, tdee) {
            const tipsContent = document.getElementById('tipsContent');
            let dicas = [];

            if (categoria === 'Abaixo do peso') {
                dicas = [
                    'ü•ó Foque em alimentos nutritivos e cal√≥ricos como abacate, oleaginosas e prote√≠nas',
                    'üí™ Inclua treinos de for√ßa para ganhar massa muscular',
                    '‚è∞ Fa√ßa refei√ß√µes frequentes ao longo do dia'
                ];
            } else if (categoria === 'Peso normal') {
                dicas = [
                    'üéØ Mantenha uma dieta equilibrada com todos os macronutrientes',
                    'üèÉ‚Äç‚ôÄÔ∏è Continue com exerc√≠cios regulares para manter a sa√∫de',
                    'üíß Beba pelo menos 2L de √°gua por dia'
                ];
            } else if (categoria === 'Sobrepeso' || categoria === 'Obesidade') {
                dicas = [
                    `üî• Para perder peso, consuma cerca de ${Math.round(tdee - 500)} calorias por dia`,
                    'ü•¨ Priorize vegetais, prote√≠nas magras e carboidratos complexos',
                    'üö∂‚Äç‚ôÄÔ∏è Comece com caminhadas e aumente gradualmente a intensidade'
                ];
            }

            tipsContent.innerHTML = dicas.map(dica => `<div>${dica}</div>`).join('');
            document.getElementById('tips').classList.remove('hidden');
        }
    </script>
